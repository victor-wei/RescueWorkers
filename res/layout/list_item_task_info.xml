<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_rectangle_white_with_radius_border"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#08000000"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dip"
            android:singleLine="true"
            android:text="详细信息"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="18dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="订单编号："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="服务内容："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_fuwushang_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="客户姓名："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>

<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="客户电话："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_customer_phone"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="客户地址："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_customer_address"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="客户车型："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_car_model"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="车辆颜色："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_car_color"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="car_vin："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_car_vin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="工作状态："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_work_state"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="上传状态："
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_upload_condition"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#08000000"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dip"
            android:singleLine="true"
            android:text="确认备注"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="18dip" 
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/memo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="---"
                android:textColor="@color/text_color_black"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#11000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_work_status_change"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:layout_marginLeft="10dip"
                android:background="@drawable/button_gray"
                android:text="新任务"
                android:textColor="@color/text_color_deep_gray"
                android:textSize="14dip" />

            
            <Button
                android:id="@+id/work_finish_upload_info"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="2"
                android:layout_marginLeft="10dip"
                android:background="@drawable/button_gray"
                android:text="上传图片和信息"
                android:textColor="@color/text_color_deep_gray"
                android:textSize="14dip" />
             <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:layout_marginLeft="10dip"
                android:background="@drawable/button_gray"
                android:text="取消"
                android:textColor="@color/text_color_red"
                android:textSize="14dip" />
        </LinearLayout>

        <!--
		<com.fg114.main.app.view.MyImageView
			android:id="@+id/advertisement_image_view"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_margin="0dp"
			android:scaleType="fitXY"
			android:visibility="gone" />
        -->

    </LinearLayout>

</LinearLayout>