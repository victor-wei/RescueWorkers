<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Enabled states -->
        
    <item android:state_checked="true" android:state_window_focused="false"
          android:state_enabled="true"
          android:drawable="@drawable/radio_box_bt01" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:state_enabled="true"
          android:drawable="@drawable/radio_box_bt02" />
    <item android:state_checked="true" android:state_pressed="true"

          android:state_enabled="true"
          android:drawable="@drawable/radio_box_bt01" />
    <item android:state_checked="false" android:state_pressed="true"
          android:state_enabled="true"
          android:drawable="@drawable/radio_box_bt02" />

    <item android:state_checked="true" android:state_focused="true"
          android:state_enabled="true"
          android:drawable="@drawable/radio_box_bt01" />
    <item android:state_checked="false" android:state_focused="true"
          android:state_enabled="true"
          android:drawable="@drawable/radio_box_bt02" />

    <item android:state_checked="false"
          android:state_enabled="true"
          android:drawable="@drawable/radio_box_bt02" />
    <item android:state_checked="true"
          android:state_enabled="true"
          android:drawable="@drawable/radio_box_bt01" />


    <!-- Disabled states -->

    <item android:state_checked="true" android:state_window_focused="false"
          android:drawable="@drawable/radio_box_bt01" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:drawable="@drawable/radio_box_bt02" />

    <item android:state_checked="true" android:state_focused="true"
          android:drawable="@drawable/radio_box_bt01" />
    <item android:state_checked="false" android:state_focused="true"
          android:drawable="@drawable/radio_box_bt02" />

    <item android:state_checked="false" android:drawable="@drawable/radio_box_bt02" />
    <item android:state_checked="true" android:drawable="@drawable/radio_box_bt01" />

</selector>